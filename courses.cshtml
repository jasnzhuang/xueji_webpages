@{
    Layout = "~/_xuejiLayout.cshtml";
    var db = Database.Open("startersite");
    var listCommand = "SELECT courses.coid,courses.coname,teachers.tname FROM courses INNER JOIN teachers ON courses.tid = teachers.tid";
}
<ul class="breadcrumb">
    <li>
        <i class="icon-home"></i>
        <a href="~/index.cshtml">控制面板</a>
        <i class="icon-angle-right"></i>
    </li>
    <li><a href="#">@Page.title</a></li>
</ul>

<table class="table table-striped table-bordered table-hover bootstrap-datatable datatable">
    <thead>
    <tr>
        <th>操作</th>
        <th>课程编号</th>
        <th>课程名称</th>
        <th>任课教师</th>

    </tr>
    </thead>
    <tbody>
    @foreach (var row in db.Query(listCommand))
    {
        <tr>
            <td>
                <a href="~/delcourses?id=@row.coid">删除</a>
            </td>
            <td>@row.coid</td>
            <td><a href="~/editcourses?id=@row.coid">@row.coname</a></td>
            <td>@row.tname</td>

        </tr>
    }
    </tbody>
</table>