@{
    Layout = "~/_xuejiLayout.cshtml";
    var db = Database.Open("startersite");
    var listCommand = "SELECT courses.id,courses.courses_name,teachers.teachers_name FROM courses INNER JOIN teachers ON courses.teachers_id = teachers.id";
}
<ul class="breadcrumb">
    <li>
        <i class="icon-home"></i>
        <a href="~/index.cshtml">控制面板</a>
        <i class="icon-angle-right"></i>
    </li>
    <li><a href="#">@Page.title</a></li>
</ul>

<table class="table table-striped table-bordered table-hover bootstrap-datatable datatable">
    <thead>
    <tr>
        <th>操作</th>
        <th>课程编号</th>
        <th>课程名称</th>
        <th>任课教师</th>

    </tr>
    </thead>
    <tbody>
    @foreach (var row in db.Query(listCommand))
    {
        <tr>
            <td>
                <a href="~/delcourses?id=@row.id">删除</a>
            </td>
            <td>@row.id</td>
            <td><a href="~/editcourses?id=@row.id">@row.courses_name</a></td>
            <td>@row.teachers_name</td>

        </tr>
    }
    </tbody>
</table>