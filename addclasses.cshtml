@{
    Layout = "~/_xuejiLayout.cshtml";
    Page.Title = "添加班级";
    //这里是和JS差不多的一个偷懒变量定义方法，用var来定义
    var spid = "";
    var cyear = "";
    var teachers_id = "";


    //这里吧，是说咱们在页面上填写的信息，怎么特么的就跑到程序里面来了呢？
    spid = Request.Form["spid"];
    cyear = Request.Form["cyear"];
    teachers_id = Request.Form["teachers_id"];

    //这句吧，就是打开这个SQLCE数据库，这个SQLCE用法跟SQL没啥太大区别，就是不用用户名密码和IP了
    var db = Database.Open("StarterSite");
    var downlistCommand = "SELECT * FROM teachers where ttype=1";
    var downlistCommand2 = "SELECT spid,spname FROM specialized";

    if (IsPost)
    {

        //这里写清楚了所谓的顺序
        var insertCommand = "INSERT INTO classes (spid,cyear,teachers_id) Values(@0, @1,@2)";
        //这句就是写如何插入到数据库，并且告诉程序要插入的数据都从哪里来的，也就是都从哪几个变量来了
        db.Execute(insertCommand, spid, cyear, teachers_id);
    }
}
<ul class="breadcrumb">
    <li>
        <i class="icon-home"></i>
        <a href="~/index.cshtml">控制面板</a>
        <i class="icon-angle-right"></i>
    </li>
    <li><a href="#">添加班级</a></li>
</ul>
<form method="post">
    <fieldset>
        <legend>班级信息</legend>
        <p>
            <label for="spid">专业：</label>
            <select id="spid" name="spid">
                @foreach (var row in db.Query(downlistCommand2)) { 
                    <option value="@row.spid">@row.spname</option>
                }
            </select>
        </p>
        <p>
            <label for="cyear">入学年份：</label>
            <select id="cyear" name="cyear">
                <option value="2016">2016</option>
                <option value="2017">2017</option>
                <option value="2018">2018</option>
                <option value="2019">2019</option>
                <option value="2020">2020</option>
                <option value="2021">2021</option>
                <option value="2022">2022</option>
            </select>
        </p>
        <p>
            <label for="tid">辅导员：</label>
            <select id="tid" name="tid">
                @foreach (var row in db.Query(downlistCommand)) { 
                    <option value="@row.teachers_id">@row.tname</option>
                }
            </select>
        </p>

        <p>
            <input type="submit" name="buttonSubmit" value="添加班级"/>
        </p>

    </fieldset>
</form>
