@{
    Layout = null;
    Response.ContentType = "text/xml";
    Response.Write("<?xml version=\"1.0\" encoding=\"UTF-8\"?>");
    var db = Database.Open("startersite");
    var orderid=Session["orderid"];
    var listCartCommand="SELECT mycart.students_id, mycart.orderid, mycart.pcount, mycart.price, students.students_name, students.students_sex, (mycart.pcount*mycart.price)as summ FROM mycart INNER JOIN students ON mycart.students_id = students.students_id where orderid=@0";    
}
<CATALOG>
@foreach (var row in db.Query(listCartCommand,orderid)) {
    <STUDENT>
        <students_name>@row.students_name</students_name>
        <PCOUNT>@row.pcount</PCOUNT>
        <PRICE>@row.price</PRICE>
        <SUMM>@row.summ</SUMM>
    </STUDENT>
}
</CATALOG>