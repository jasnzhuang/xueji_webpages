<form method="post">
    <fieldset>
        <legend>学生信息</legend>
        <p>
            <label for="snum">学号：</label>
            <input type="text" id="snum" name="snum" value=""/>
        </p>
        <p>
            <label for="cid">班级：</label>
            <select id="cid" name="cid">
                @foreach (var row in db2.Query(downlistCommand))
                {
                    <option value="@row.cid">@row.cyear@row.spname</option>
                }
            </select>
        </p>
        <p>
            <label for="sname">学生姓名：</label>
