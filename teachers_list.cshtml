@{
    Layout = "~/_xuejiLayout.cshtml";
    var db = Database.Open("startersite");
    var listCommand = "SELECT * FROM teachers";
}
<ul class="breadcrumb">
    <li>
        <i class="icon-home"></i>
        <a href="~/index.cshtml">控制面板</a>
        <i class="icon-angle-right"></i>
    </li>
    <li><a href="#">@Page.title</a></li>
</ul>

    <table class="table table-striped table-bordered table-hover bootstrap-datatable datatable">
        <thead>
        <tr>
            <th>操作</th>
            <th>教师编号</th>
            <th>教师姓名</th>
            <th>教师职能</th>

        </tr>
        </thead>
        <tbody>
        @foreach (var row in db.Query(listCommand))
        {
            <tr>
                <td><a href="/teachers_delete?id=@row.id">删除</a></td>
                <td>@row.id</td>
                <td>@row.teachers_name</td>
                <td>
                    @*@if (row.teachers_type == 1)
                    {
                        @:辅导员
                    }
                    @if (row.teachers_type == 2)
                    {
                        @:讲师
                    }*@
                    @{
                        @Functions.GetTeachersType(row.teachers_type);
                    }
                </td>

            </tr>
                        }
        </tbody>
    </table>

