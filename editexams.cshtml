@{
    Layout = "~/_xuejiLayout.cshtml";
    var exdate = "";
    var exname = "";
    var extype = "";
    var exid = Request.QueryString["ID"];
    var db = Database.Open("startersite");

    if (!IsPost)
    {
        if (!Request.QueryString["ID"].IsEmpty() && Request.QueryString["ID"].IsInt())
        {

            var dbCommand = "SELECT * from exams WHERE exid = @0";
            //因为我们只是要取出一条数据库记录，因为指定了ID嘛，所以不再使用query这个方法，而是QuerySingle方法
            var row = db.QuerySingle(dbCommand, exid);

            if (row != null)
            {
                exdate = Convert.ToString(row.exdate);
                exname = row.exname;
                extype = Convert.ToString(row.extype);
            }
            else
            {
                Validation.AddFormError("No user was found for that ID.");
            }
        }
        else
        {
            Validation.AddFormError("No user was selected.");
        }
    }
    //if (IsPost && cid!=0)
    if (IsPost)
    {


        exdate = Request.Form["exdate"];
        exname = Request.Form["exname"];
        extype = Request.Form["extype"];

        if (Validation.IsValid())
        {
            var updateCommand = "UPDATE exams SET exdate=@1,exname=@2,extype=@3 WHERE exid=@0";
            db.Execute(updateCommand, exid, exdate, exname, extype);

            Response.Redirect("~/exams");
        }
    }
}
