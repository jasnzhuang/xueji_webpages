        <legend>当前学生信息</legend>

        <div class="control-group">
            <label class="control-label" for="exdate">考试日期：</label>
            <div class="controls">
                <input type="text" class="input-xlarge datepicker" id="exdate" name="exdate" value="@exdate">
            </div>
        </div>
        <p>
            <label for="exname">考试名称：</label>
            <input type="text" id="exname" name="exname" value="@exname"/>
        </p>
        <p>
            <label for="extype">考试类型：</label>
            <input type="text" id="extype" name="extype" value="@extype"/>
        </p>
  

        <input type="hidden" name="exid" value="@exid"/>

